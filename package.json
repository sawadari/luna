{
  "name": "luna",
  "version": "1.0.0",
  "description": "World-Class Knowledge Creation Platform - DEST + Planning Layer + SSOT on Miyabi",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "workspaces": [
    "packages/*",
    "examples/*",
    "workspaces/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "agents:dest": "tsx src/agents/dest-agent.ts",
    "agents:box-nav": "tsx src/agents/box-navigator-agent.ts",
    "agents:gate": "tsx src/agents/gate-keeper-agent.ts",
    "agents:coordinator": "tsx src/agents/coordinator-agent.ts",
    "agents:parallel:exec": "tsx src/agents/parallel-executor.ts",
    "agents:planning": "tsx src/agents/planning-agent.ts",
    "agents:assumption": "tsx src/agents/assumption-tracker-agent.ts",
    "agents:ssot": "tsx src/agents/ssot-agent.ts",
    "agents:ssot-v2": "tsx src/agents/ssot-agent-v2.ts",
    "agents:evidence": "tsx src/agents/evidence-governance-agent.ts",
    "agents:change": "tsx src/agents/change-control-agent.ts",
    "agents:exception": "tsx src/agents/exception-registry-agent.ts",
    "state:transition": "tsx src/workflows/state-transition.ts",
    "demo:kernel-registry": "tsx scripts/demo-kernel-registry.ts",
    "test:ssot-v2": "tsx scripts/test-ssot-agent-v2.ts",
    "test:coordinator": "tsx scripts/test-coordinator-agent.ts",
    "test:e2e": "tsx scripts/test-e2e-full-pipeline.ts",
    "create-test-issue": "tsx scripts/create-test-issue.ts",
    "run-coordinator": "tsx scripts/run-coordinator.ts",
    "check-env": "tsx scripts/check-env.ts",
    "check-convergence": "tsx scripts/check-kernel-convergence.ts",
    "auto-complete-nrvv": "tsx scripts/auto-complete-nrvv.ts",
    "test:rules-config": "tsx scripts/test-rules-config.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "DEST",
    "Planning Layer",
    "SSOT",
    "miyabi",
    "autonomous development",
    "knowledge creation",
    "GitHub automation"
  ],
  "author": "sawadari",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@octokit/rest": "^20.0.2",
    "@types/uuid": "^10.0.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "uuid": "^13.0.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
